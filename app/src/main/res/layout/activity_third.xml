<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/better9"
    android:stretchColumns="1"

    tools:context=".ThirdActivity">

    <TableRow android:padding="5dip">
        <TextView
            android:layout_height="wrap_content"
            android:text="User's details"
            android:layout_span="2"
            android:gravity="center_horizontal"
            android:textSize="30dp"
            android:textColor="#ff22"/>


    </TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="#ff22"
            android:textStyle="bold"
            android:textSize="20dp"

            android:layout_column="0"/>
        <EditText
            android:id="@+id/nameId"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:text="Age:"
            android:textColor="#ff22"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/ageId"
            android:layout_height="wrap_content"
            android:layout_column="1"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:text="Height/m:"
            android:textColor="#ff22"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/heightId"
            android:layout_height="wrap_content"
            android:layout_column="1"/>
    </TableRow><TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:text="Weight/kg:"
            android:textColor="#ff22"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/weightId"
            android:layout_height="wrap_content"
            android:layout_column="1"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_height="wrap_content"
            android:text="OK"
            android:textSize="20dp"
            android:id="@+id/button2Id"


            android:layout_marginRight="60dp"
            android:textStyle="bold"/>
        <Button
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="20dp"
            android:id="@+id/button3Id"
            android:textStyle="bold"/>
    </TableRow>
<TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:text="RESULT:"
            android:textSize="22dp"
            android:id="@+id/BmiId"
            android:layout_marginTop="40dp"
            android:textColor="#BD311E"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_height="wrap_content"
            android:id="@+id/resultId"
            android:textSize="22dp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:text="COMMENT:"
            android:textSize="22dp"
            android:id="@+id/commentId"
            android:layout_marginTop="40dp"
            android:textColor="#BD311E"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_height="wrap_content"
            android:id="@+id/comment1Id"
            android:textSize="22dp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"/>
    </TableRow>







</TableLayout>